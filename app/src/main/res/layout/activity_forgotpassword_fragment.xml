<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/sofia_m"
            android:text="Forgot Password,"
            android:textColor="#bdc5cc"
            android:textSize="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/tv_create1"
            android:layout_width="367dp"
            android:layout_height="74dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/sofia_m"
            android:text=" Enter your email address, We will send  you a mail to reset your password!"
            android:textColor="#bdc5cc"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_create"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="@+id/tv_create"
            app:layout_constraintTop_toBottomOf="@+id/tv_create"></TextView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:layout_marginTop="28dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_create1">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tv_email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:hint="Email"
                android:textColorHint="#FF494747"
                app:boxStrokeColor="#fca5b2"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:counterTextAppearance="@style/TextAppearance.AppCompat.Small"
                app:counterTextColor="@color/black"
                app:errorTextColor="#FD0303"
                app:hintTextColor="#f76c99">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#D69C9C"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/image_button_reset"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape_2"
            android:clickable="true"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"></ImageButton>

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Submit"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/image_button_reset"
            app:layout_constraintEnd_toEndOf="@+id/image_button_reset"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@+id/image_button_reset"
            app:layout_constraintTop_toTopOf="@+id/image_button_reset"
            app:layout_constraintVertical_bias="0.4">

        </TextView>

        <TextView
            android:id="@+id/tv_have_account"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/sofia_m"
            android:text=" @copyright 2021"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


